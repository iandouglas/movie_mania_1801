<!DOCTYPE html>
<html>
  <head>
    <title>MovieMania</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <p>Cart: <%= @cart.total_item_count %> </p>
    </nav>
    <%flash.each do |type, message|%>
      <%= content_tag :div, message, class: type %>
    <% end %>
    <%= yield %>
  </body>
</html>
